<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="?actionBarSize"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.sise.titulacion.anypsa.EstadoCuenta">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:src="@drawable/login"
            android:layout_gravity="left"
            android:layout_width="150dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Estado de Cuenta"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
<TextView
    android:layout_width="match_parent"
    android:background="@color/colorNegro"
    android:layout_height="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Luis Negron Navarro"
        android:textStyle="bold"
        android:id="@+id/tvNombreCliente" />
 <LinearLayout
     android:layout_width="wrap_content"
     android:orientation="horizontal"
     android:layout_height="wrap_content">
       <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:text="RUC : "
           android:textStyle="bold"
           />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:text="10455133918"
         android:textStyle="bold"
         android:id="@+id/tvRucCliente" />
 </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Av el sol 515 urbanizacion palo alto carabayllo, comas, lima,peru"
        android:textStyle="bold"
        android:id="@+id/tvDireccion"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:background="@color/colorNegro"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Linea de Credito: "
            android:textStyle="bold"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" 15 000.00"
        android:textStyle="bold"
        android:id="@+id/tvLineaCredito"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Credito disponible: "
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" 5 000.00"
            android:textStyle="bold"
            android:id="@+id/tvCreditoDisponible"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Facturacion: "
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="del 05/07/2016 al 04/08/2016"
            android:textStyle="bold"
            android:id="@+id/tvPeriodoFacturacion"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:background="@color/colorNegro"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Monto a Pagar: "
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" 10 000.00"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/tvMontoTotal"
            />
    </LinearLayout>
</LinearLayout>
